<h1>Members Only</h1>

<div class="links">
  <%= link_to 'Create New Post', new_post_path %>
  <div class="account">
    <% if !user_signed_in? %>
        <%= link_to 'Sign Up', new_user_registration_path %><br><br><br><br>
        <%= link_to 'Sign In', user_session_path %>
        <% else %>
        <%= link_to 'Sign Out', destroy_user_session_path, data: {turbo_method: :delete } %><br><br><br><br>
    <% end %>
  </div>
</div>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="title"><%= post.title %><br></div>
      <%= post.body %><br>
      <div class="username"><%= User.find(post.user_id).username unless !user_signed_in? %></div>
    </div>
  <% end %>
</div>
